<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.autocommit">true</property>
        <!-- 2 : ReadCommited, 4: ReadUncommitted -->
        <property name="connection.isolation">2</property>
        <property name="connection.pool_size">100</property>
        <property name="current_session_context_class">thread</property>

        <!--<property name="transaction.factory_class">-->
        <!--org.hibernate.engine.transaction.internal.jdbc.JdbcTransactionFactory-->
        <!--</property>-->

        <!-- 개발 시에는 안하는 게 좋다. 실 운영 시에는 성능을 고려해서 적용여부를 결정해야 한다 -->
        <property name="hibernate.cache.region.factory_class">
            org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory
        </property>
        <property name="cache.use_second_level_cache">false</property>
        <property name="cache.use_query_cache">false</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- spawn | spawn-drop | update | validate -->
        <property name="hbm2ddl.auto">create</property>


        <!-- 검색 : hibernate-search 를 이용 : listener 도 추가해야 한다.-->
        <property name="hibernate.search.default.directory_provider">filesystem</property>
        <property name="hibernate.search.default.indexBase">./lucene/indexes</property>


        <!-- one-to-many bidirectional association -->
        <mapping resource="org/hibernate/example/domain/model/Category.hbm.xml"/>
        <mapping resource="org/hibernate/example/domain/model/Event.hbm.xml"/>

        <!-- have 2 component -->
        <mapping resource="org/hibernate/example/domain/model/User.hbm.xml"/>

        <!-- collection -->
        <mapping resource="org/hibernate/example/domain/model/collection/Item.hbm.xml"/>

        <!-- join component -->
        <mapping resource="org/hibernate/example/domain/model/join/Customer.hbm.xml"/>

        <!-- joined-subclass component -->
        <mapping resource="org/hibernate/example/domain/model/joinedSubclass/Company.hbm.xml"/>
        <mapping resource="org/hibernate/example/domain/model/joinedSubclass/Person.hbm.xml"/>

        <event type="post-update">
            <listener class="org.hibernate.search.event.impl.FullTextIndexEventListener"/>
        </event>
        <event type="post-insert">
            <listener class="org.hibernate.search.event.impl.FullTextIndexEventListener"/>
        </event>
        <event type="post-delete">
            <listener class="org.hibernate.search.event.impl.FullTextIndexEventListener"/>
        </event>
    </session-factory>
</hibernate-configuration>