<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost/hibernate</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <!--<property name="connection.driver_class">com.mysql.jdbc.Driver</property>-->
        <!--<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>-->
        <!--<property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>-->
        <!--<property name="connection.username">root</property>-->
        <!--<property name="connection.password">root</property>-->

        <!--<property name="connection.driver_class">org.h2.Driver</property>-->
        <!--<property name="dialect">org.hibernate.dialect.H2Dialect</property>-->
        <!--<property name="connection.url">jdbc:h2:mem:tempdb</property>-->
        <!--<property name="connection.username">sa</property>-->
        <!--<property name="connection.password"></property>-->

        <!--<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>-->
        <!--<property name="dialect">org.hibernate.dialect.HSQLDialect</property>-->
        <!--<property name="connection.url">jdbc:hsqldb:mem:tempdb</property>-->
        <!--<property name="connection.username">sa</property>-->
        <!--<property name="connection.password"></property>-->

        <property name="connection.autocommit">true</property>
        <!-- 2 : ReadCommited, 4: ReadUncommitted -->
        <property name="connection.isolation">2</property>
        <property name="connection.pool_size">100</property>
        <property name="current_session_context_class">thread</property>

        <!--<property name="transaction.factory_class">-->
        <!--org.hibernate.engine.transaction.internal.jdbc.JdbcTransactionFactory-->
        <!--</property>-->

        <!-- 개발 시에는 안하는 게 좋다. 실 운영 시에는 성능을 고려해서 적용여부를 결정해야 한다 -->
        <property name="hibernate.cache.region.factory_class">
            org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory
        </property>
        <property name="cache.use_second_level_cache">false</property>
        <property name="cache.use_query_cache">false</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- spawn | spawn-drop | update | validate -->
        <property name="hbm2ddl.auto">create</property>

        <!-- one-to-many bidirectional association -->
        <mapping resource="org/hibernate/example/domain/model/Category.hbm.xml"/>
        <mapping resource="org/hibernate/example/domain/model/Event.hbm.xml"/>

        <!-- have 2 component -->
        <mapping resource="org/hibernate/example/domain/model/User.hbm.xml"/>

        <!-- collection -->
        <mapping resource="org/hibernate/example/domain/model/collection/Item.hbm.xml"/>

        <!-- join component -->
        <mapping resource="org/hibernate/example/domain/model/join/Customer.hbm.xml"/>

        <!-- joined-subclass component -->
        <mapping resource="org/hibernate/example/domain/model/joinedSubclass/Company.hbm.xml"/>
        <mapping resource="org/hibernate/example/domain/model/joinedSubclass/Person.hbm.xml"/>

        <!-- JPA -->
        <mapping class="org.hibernate.example.domain.model.StatefulEntityImpl"/>
    </session-factory>
</hibernate-configuration>